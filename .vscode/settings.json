{
    // Ensure jupyter notebooks run with the project root as working directory
    "jupyter.notebookFileRoot": "${workspaceFolder}",

    // Point Python to load environment variables from .env
    "python.envFile": "${workspaceFolder}/.env",

    // Point to venv interpreter
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python"
}

